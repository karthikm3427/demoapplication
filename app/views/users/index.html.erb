<h1 class="demo_class">Listing users</h1>

<table style ="color:red" id="sample_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Download User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag(user.avatar.url(:medium),:size => "100x100") %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td> <%= link_to 'Download PDF',download_pdf_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @users %>
<div id ="demo_div">
  <%= link_to 'New User', new_user_path %>
</div>

