<%= form_tag(authors_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Authors" %>
<%= submit_tag "Search" %>
<% end %>

<% if @authors.present? %>
  <%= render @authors %>
<% else %>
  <p>There are no authors containing the term(s) <%= params[:search] %>.</p>
<% end %>
<h1 class="demo_class">Listing authors</h1>


<table id="sample_authors">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id ="demo_div_author">
<%= link_to 'New Author', new_author_path %>
</div>

<script>
  $(document).ready(function(){
    sample_authors()
  });

  $(function(){
   console.log("Hello Author");
  });
</script>
